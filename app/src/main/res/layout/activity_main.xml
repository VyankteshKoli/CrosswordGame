<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97C8DD"
    tools:context=".EndGame"
    android:orientation="vertical"
    tools:ignore="Orientation">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="495dp"
        android:src="@drawable/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="345dp"
        android:gravity="center_horizontal"
        android:text="Welcome \nTo \nCrossword"
        android:textColor="#000"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/easy"
        android:layout_width="163dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="202dp"
        android:background="@drawable/borderandcolor"
        android:gravity="center"
        android:text="Easy Mode"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hard"
        android:layout_width="163dp"
        android:layout_height="50dp" android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="125dp"
        android:background="@drawable/borderandcolor"
        android:gravity="center"
        android:text="Hard Mode"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>